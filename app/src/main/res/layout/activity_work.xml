<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WorkActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="My Work"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/job1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Engineer at XYZ Corp"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/job1Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed and maintained mobile applications for Android and iOS platforms."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/job1"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/job2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backend Developer at ABC Technologies"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/job1Description"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/job2Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed and implemented RESTful APIs to support web and mobile applications."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/job2"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#555555"/>


    <TextView
        android:id="@+id/job3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intern at DEF Ltd."
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/job2Description"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/job3Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assisted in front-end development for a variety of client projects."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/job3"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#555555"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>
